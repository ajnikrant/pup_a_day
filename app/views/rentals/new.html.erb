<h1 class="head"> Lets rent a puppy! </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <div class="alert alert-danger"><p><%= error %></p></div>
  <% end %>
<% end %>
<br>

<%= form_for @rental do |f|%>
      <h4>Puppy to Rent: <%=flash[:puppy_name]%></h4>
      <br><br>
      <%= f.label :cost, "Cost Per Day: " %>
      $<%= @rental.new_cost %>
      <br><br>
      <%=f.label :date, "Select A Date: " %>

      <%= f.date_field :date %>

      <%= f.hidden_field :puppy_id, value: flash[:puppy_id] %>      
      <br><br><br>
     
<div class= "d-grid col-1">
    <%=f.submit "Submit", class:"btn btn-outline-secondary btn1" %></div>

<%end%>